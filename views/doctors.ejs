<style>
    .main {
        position: relative;
    }

    .container {
        position: relative;
        perspective: 1000px;
    }

    .head {
        position: relative;
    }

    .head img {
        max-width: 100%;
        height: auto;
        z-index: 1;
        transition: transform 0.5s ease-in-out;
        cursor: pointer; /* Set cursor to pointer */
    }

    .head::after {
        content: "";
        position: absolute;
        top: -2px; /* Adjust the top and left to create the border */
        left: -2px;
        width: calc(100% + 4px); /* Adjust the width and height to include the border */
        height: calc(100% + 4px);
        background-color: green;
        border: 2px solid white; /* Add a 2px white border */
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
        pointer-events: none;
        z-index: 2; /* Set a higher z-index to cover the image */
        border-radius: 10px; /* Add border-radius for curved edges */
    }

    .main.active .head img {
        transform: scaleX(-1);
    }

    .main.active .head::after {
        opacity: 1;
    }

    .main .bodyg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
        text-align: center;
        color: white;
        font-size: 10px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; 
        z-index: 3;
        padding:10px;
    }

    .main.active .bodyg {
        opacity: 1;
    }

    @media only screen and (max-width: 767px) {
        .main {
            margin-bottom: 70px; 
            margin-top:120px;/* Adjust the margin to increase spacing between doctors */
        }
        .main .bodyg {
            font-size: 8px; /* Adjust font size for smaller screens */
        }
        .body.hide-on-mobile {
            display: none;
        }
        
    }
</style>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var mains = document.querySelectorAll(".main");

        mains.forEach(function (main) {
            main.addEventListener("click", function () {
                main.classList.toggle("active");

                // Get the .body element inside the current .main
                var body = main.querySelector(".body");

                // Toggle a class to hide/show the name and details on mobile
                body.classList.toggle("hide-on-mobile", main.classList.contains("active"));
            });

            main.addEventListener("mouseenter", function () {
                main.classList.add("hovered");
            });

            main.addEventListener("mouseleave", function () {
                main.classList.remove("hovered");
            });
        });
    });
</script>




